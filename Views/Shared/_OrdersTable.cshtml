@model IEnumerable<SolutionsForBuisnesTestTask.Domain.Models.Order>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Provider)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id ="OrderId_@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Provider.Name)
                    </td>
                    <td>
                        <a asp-controller="Order" asp-action="CreateEdit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        
                        <button type="button" class="btn-danger DeleteOrderBtn" data-order-id="@item.Id">Delete</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h2>
        No orders found
    </h2>
}
