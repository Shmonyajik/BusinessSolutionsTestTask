@model SolutionsForBuisnesTestTask.Domain.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Provider)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Provider.Name)
        </dd>
        
    </dl>
    <hr />
    @await Html.PartialAsync("_OrdersItemsTable", Model.Items)
    
</div>
<div>
    <a asp-action="CreateEdit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
    <div class="form-group">
        <button type="button" class="btn-danger " id="DeleteThisOrderBtn">Delete Order</button>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("#DeleteThisOrderBtn").click(function () {
            deleteOrder(@Model?.Id, NaN, '@Url.Action("Delete", "Order")')
        });
    });
</script>
